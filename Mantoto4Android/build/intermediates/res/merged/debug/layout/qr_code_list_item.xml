<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/youhuiquan_bg"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_PriceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥40"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/order_Commit_CodeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="劵码"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/order_Commit_UsedId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未使用"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/order_Commit_quanmaId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券码："
                    android:textColor="@color/white"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/image_NameId"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/code_logo"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/tv_goodId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:text="订单名称"
                    android:paddingLeft="10dp"
                    android:textColor="#cf135e"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用期"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/time_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-7"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical|right"
                >

                <TextView
                    android:id="@+id/tv_TotalPriceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="东来顺秘制小料，你值得拥有---"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/use_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="立即使用》》"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <!-- 二维码-->
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/order_Commit_two_DimisionCodeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/code_logo" />

        </LinearLayout>

</LinearLayout>