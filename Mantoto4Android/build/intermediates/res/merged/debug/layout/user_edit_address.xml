<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 导航 -->

    <include 
          android:id="@+id/common_back"
          layout="@layout/include_main_topbar" />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#dfdfdf" >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联系人"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/base_color_text_black"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/user_Address_nameId"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请填写"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:inputType="text"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联系方式"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/base_color_text_black"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/user_Address_PhoneNumberId"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请填写"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:inputType="phone"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
      >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="所在城市"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/base_color_text_black"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/user_Address_arerId"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请填写"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:inputType="text"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
       >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="详细地址"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/base_color_text_black"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/user_Address_AddressId"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请填写"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:inputType="text"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" >
    </LinearLayout>
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >

       <Button
            android:id="@+id/order_Commit2Id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_login"
            android:onClick="commit"
            android:textSize="26sp" />
    </LinearLayout>
    
    <include
        android:id="@+id/view_network_error"
        layout="@layout/network_error"
        android:visibility="gone" />

</LinearLayout>