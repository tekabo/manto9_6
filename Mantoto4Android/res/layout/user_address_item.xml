<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textColor="@color/base_color_text_black"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_nameId"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:textColor="@color/base_color_text_black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="联系方式："
            android:textColor="@color/base_color_text_black"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_phoneNumberId"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="13113113113"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/base_color_text_black"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="联系地址："
            android:textColor="@color/base_color_text_black"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            />
            <TextView
                android:id="@+id/tv_AddressId"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="北京是昌平区沙河地铁站"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/base_color_text_black"
                android:layout_margin="5dp"
                android:layout_below="@id/tv_nameId"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginBottom="5dp"
        >
      <Button
            android:id="@+id/user_address_get"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="选取"
            android:textSize="13sp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/blue_btn_txt_normal"
            android:background="@drawable/btn_empty_bg"
            android:layout_marginRight="10dp"
            android:focusable="false"
            />
        <Button
            android:id="@+id/user_address_delete"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="删除"
            android:textSize="13sp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/blue_btn_txt_normal"
            android:background="@drawable/btn_empty_bg"
            android:layout_marginRight="17dp"
            android:focusable="false"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_line"
        />

</LinearLayout>