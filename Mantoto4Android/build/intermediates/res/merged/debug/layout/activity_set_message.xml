<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"

    >
    <include
        layout="@layout/include_main_topbar"
        android:id="@+id/common_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:textSize="14sp"
            android:textColor="@color/base_color_text_black"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/personal_txt_age"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="设置"
            android:paddingLeft="100dp"
            android:textColorHint="@color/base_color_text_gray"
            android:textSize="14sp"
            />
        <Spinner
            android:id="@+id/spinner_arrow_age"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="20dp"
            android:spinnerMode="dialog"
            android:drawSelectorOnTop="false"
            android:prompt="@string/user_age"
            android:padding="30dp"
            android:entries="@array/ages"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/personal_gender"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="14sp"
            android:textColor="@color/base_color_text_black"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/personal_txt_gender"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="设置"
            android:paddingLeft="100dp"
            android:textColorHint="@color/base_color_text_gray"
            android:textSize="14sp"
            />
        <Spinner
            android:id="@+id/spinner_arrow_gender"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="20dp"
            android:spinnerMode="dialog"
            android:drawSelectorOnTop="false"
            android:prompt="@string/user_gender"
            android:padding="30dp"
            android:entries="@array/genders"
            />
        <!--android:dropDownHorizontalOffset="0dp"
           android:dropDownVerticalOffset="300dp"-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/plot_control"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="小区管理"
            android:textSize="14sp"
            android:textColor="@color/base_color_text_black"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/personal_txt_plotcontrol"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="设置"
            android:paddingLeft="100dp"
            android:textColorHint="@color/base_color_text_gray"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="20dp"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_line"
        />
</LinearLayout>
